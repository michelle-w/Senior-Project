ScreenManagement:
    IntroScreen:
    SummariesScreen:
	
<IntroScreen>:
    name: 'intro'
    BoxLayout:
    	orientation: "vertical"
	    Label:
	    	text: "Welcome to the SCIENCE SUMMARIZER! Select a news source to get your daily overview of current advances in science and technology!"
    		text_size: self.width, None
    		font_size: 35
    		halign: "center"
    		canvas.before:
				Color:
					rgba: (0.42, 0.48, 0.56, 1)
				Rectangle:
					pos: self.pos
					size: self.size
    	
	    
	    Button:
	    	id: summaryBtn
	        on_release: app.root.current = 'summaries'
	        text: 'Nature News Summaries'
	        size_hint: (1, 0.35)
	        font_size: 30
	        background_color: (1,0,0.3,0.9)
	            
<SummariesScreen>:
    name: 'summaries'
    BoxLayout:
    	orientation: "vertical"
    	Label:
    		id: label1
    		text: root.t
			size_hint: (1,0.1)
			font_size: 20
			halign: "center"
			canvas.before:
				Color:
					rgba: (1, 0, 0, 0.5)
				Rectangle:
					pos: self.pos
					size: self.size
		Label:
			id: label2
			text: root.s
			text_size: self.width, None
			font_size: 16
			halign: "left"
			canvas.before:
				Color:
					rgba: (1, 0, 0, 0.5)
				Rectangle:
					pos: self.pos
					size: self.size
		Button:
			text: "Get definitions"
			on_release: root.show_defs()
			size_hint: (1,0.1)
			font_size: 17
			background_color: (0.3, 0.1, 1, 0.8)
		Button:
			text: "Next summary"
			on_release: root.change_summaries()
			size_hint: (1,0.1)	
			font_size: 17
			background_color: (0.3, 0.1, 1, 0.8)		
	    Button:
	        on_release: app.root.current = 'intro'
	        text: 'Back to home screen'
	        font_size: 17
	        background_color: (0.5,0.5,1,0.8)
	        size_hint: (1,0.1)
